<Window x:Class="WpfValidFields.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfValidFields"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="338.2">
    <Grid Margin="0,0,4,0">
        <TextBox HorizontalAlignment="Left" Margin="45,30,0,0" TextWrapping="Wrap" Text="Put your name" VerticalAlignment="Top" Height="20" Width="220"/>
        <TextBox Name="txtemail" HorizontalAlignment="Left" Margin="45,55,0,0" TextWrapping="Wrap" Text="Put your e-mail" VerticalAlignment="Top" Height="20" Width="220"/>
        <TextBox Name="txtphone" HorizontalAlignment="Left" Margin="45,80,0,0" TextWrapping="Wrap" Text="Put your phone" VerticalAlignment="Top" Height="20" Width="220"/>
        <Button Content="Validar" HorizontalAlignment="Left" Margin="45,195,0,0" VerticalAlignment="Top" Width="245" Height="200" Click="Button_Click"/>
    </Grid>
</Window>
